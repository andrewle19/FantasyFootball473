{{outlet}}
<div class="jumbotron text-center">
    <h1>{{headerMessage}}</h1>

    <br/>
    <br/>

    <h2 class="box-title">Sign In</h2>

    <div class="form-horizontal form-group form-group-lg row">
      <div class ="signin-unameps">
        <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
            {{input type="email" value=email class="form-control" placeholder="e-mail address" autofocus="autofocus"}}
        </div>

        <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
            {{input type="password" value=password class="form-control" placeholder="password" autofocus="autofocus"}}
        </div>
      </div>
    </div>

      <div class="form-horizontal form-group form-group-lg row">
          <div class="signin-buttons">
            <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
                <button class="btn btn-primary btn-lg btn-block button" {{action 'sendLogin'}} disabled={{isDisabled}}>Sign In</button>
            </div>
          </div>
      </div>

      {{#if responseMessage}}
      <div class="alert alert-success">{{responseMessage}}</div>
      {{/if}}

    <br/>
    <br/>

</div>
