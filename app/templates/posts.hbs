<h2>New Post</h2>
<ul class="post-publish">
  <li>
    {{input value=username placeholder="username"}}
  </li>
  <li>
    {{textarea value=body placeholder="Body"}}
  </li>
  <li>
    <button {{action "publishPost"}}>Publish</button>
  </li>
</ul>

<section>
{{#each model as |post|}}
  <div>{{post.username}}</div>
  <div>{{post.body}}</div>
{{/each}}
</section>

{{outlet}}
